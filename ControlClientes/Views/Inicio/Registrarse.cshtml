@model ControlClientes.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlClientes.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5 pt-5">
       <div class="row justify-content-center">
            <h1 class="display-5 text-center">Registrarse</h1>
            <div class="col-12 col-xl-4 col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    Registrate
                </div>

                <div class="card-body">

                    <form asp-controller="Inicio" asp-action="Registrarse" method="post">

                        <input class="form-control mb-3" type="text" placeholder="Nombre" asp-for="NombreUsuario" required />
                        <input class="form-control mb-3" type="text" placeholder="Email" required asp-for="Email"/>
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Clave"/>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Registrate</button>
                        </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }
                        ¿Ya tienes cuenta? <a href="@Url.Action("IniciarSesion","Inicio")">Iniciar Sesion</a>

                    </form>

                </div>

            </div>

        </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
