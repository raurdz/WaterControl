@model ControlClientes.Models.Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlClientes.styles.css" asp-append-version="true" />
</head>
<body style="background-image: url(https://images.unsplash.com/photo-1628767719221-fdf36470b997?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1920&q=1280); background-size: 100%">
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center">
            <h1 class="display-5 text-center">Bienvenido a Water Control</h1>
        <div class="col-12 col-xl-4 col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    Iniciar Sesión
                </div>

                <div class="card-body">

                    <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">

                        <input class="form-control mb-3" type="text" placeholder="Email" required name="email"/>
                        <input class="form-control mb-3" type="password" placeholder="Contraseña" required name="clave"/>
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-primary" type="submit">Iniciar Sesión</button>
                        </div>
                        @if(ViewData["Mensaje"]!= null)
                        {
                            <div class="form-group">
                                <div class="alert alert-danger" role="alert">
                                    @ViewData["Mensaje"]
                                </div>
                            </div>
                        }
                        ¿No tienes cuenta? <a href="@Url.Action("Registrarse","Inicio")">Registrate!</a>

                    </form>

                </div>

            </div>

        </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
